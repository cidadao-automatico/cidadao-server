# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/pl/:lawid/votes				controllers.Application.getVotes(lawid: String, callback: Option[String])
GET		/load						controllers.Application.loadPL
GET		/tag						controllers.Application.getTags(callback: Option[String])
GET		/pl							controllers.Application.getPLs(page: Option[Int], callback: Option[String])
